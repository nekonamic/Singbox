<Page
    x:Class="Singbox.Views.Pages.OverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Singbox.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="OverviewPage"
    d:DataContext="{d:DesignInstance local:OverviewPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid VerticalAlignment="Top">
        <UniformGrid Rows="2" Columns="2" Margin="0,0,0,12" HorizontalAlignment="Stretch">

            <!-- Status -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="Status" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- 左对齐 -->
                        <TextBlock Grid.Column="0"
               Text="{Binding MemoryUsage, StringFormat=Memory: {0} MB}"
               HorizontalAlignment="Left" />

                        <!-- 右对齐 -->
                        <TextBlock Grid.Column="1"
               Text="{Binding Goroutines, StringFormat=Goroutines: {0}}"
               HorizontalAlignment="Right" />
                    </Grid>
                </StackPanel>
            </ui:Card>

            <!-- Connections -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="Connections" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" />
                    <TextBlock Text="{Binding Inbound, StringFormat=Inbound: {0}}" />
                    <TextBlock Text="{Binding Outbound, StringFormat=Outbound: {0}}" />
                </StackPanel>
            </ui:Card>

            <!-- Traffic -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="Traffic" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" />
                    <TextBlock Text="{Binding UplinkSpeed, StringFormat=Uplink: {0}}" />
                    <TextBlock Text="{Binding DownlinkSpeed, StringFormat=Downlink: {0}}" />
                </StackPanel>
            </ui:Card>

            <!-- TrafficTotal -->
            <ui:Card>
                <StackPanel>
                    <TextBlock Text="TrafficTotal" FontWeight="Bold" FontSize="16" Margin="0,0,0,8" />
                    <TextBlock Text="{Binding TotalUplink, StringFormat=Uplink: {0}}" />
                    <TextBlock Text="{Binding TotalDownlink, StringFormat=Downlink: {0}}" />
                </StackPanel>
            </ui:Card>
        </UniformGrid>
    </Grid>
</Page>
